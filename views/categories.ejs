       <script>
        $(document).ready(function() {

    $('.category-slider').slick({
        centerMode: true,
        centerPadding: '600px',
        slidesToShow: 2,
        infinite: true,
        arrows: true, 
        responsive: [
            {
                breakpoint: 768,
                settings: {
                    arrows: false,
                    centerMode: true,
                    centerPadding: '40px',
                    slidesToShow: 2
                }
            },
            {
                breakpoint: 480,
                settings: {
                    arrows: false,
                    centerMode: true,
                    centerPadding: '40px',
                    slidesToShow: 3
                }
            }
        ]
    });

    let lastScrollTop = 0;
    $('.category-slider').on('wheel', function(e) {
        e.preventDefault(); 
        
        let st = e.originalEvent.deltaY; 

        if (st > 0) {
            $(this).slick('slickNext'); 
        } else {
      
            $(this).slick('slickPrev'); 
        }
    });
});

       </script>





