<script>

    function switchCategory(category) {
        document.querySelectorAll('.subcategory-list div').forEach(div => {
            div.classList.add('d-none');
        });
        document.getElementById(`subcategory-${category}`).classList.remove('d-none');
    }
    if ('<%= activeCategory %>' === 'All') {
        document.querySelectorAll('.subcategory-list div').forEach(div => {
            div.classList.remove('d-none');
        });
    }
</script>









