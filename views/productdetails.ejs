<script>
let currentImageIndex = 0;

// Function to select and display the image
function selectImage(element) {
    var containers = document.querySelectorAll('.image-container');
    containers.forEach(function (container) {
        container.classList.remove('selected');
    });

    element.classList.add('selected');
    var selectedImageSrc = element.getAttribute('data-image-src');
    document.getElementById('mainImage').setAttribute('src', selectedImageSrc);
}

// Scroll images when the button is clicked
function scrollImages(direction) {
    var container = document.querySelector('.vertical-scroll-container');
    var containers = document.querySelectorAll('.image-container');
    var imageHeight = 180; // Fixed height of each image container (160px + padding)

    if (direction === 'up' && currentImageIndex > 0) {
        currentImageIndex--;
    } else if (direction === 'down' && currentImageIndex < containers.length - 1) {
        currentImageIndex++;
    }

    // Scroll the container
    container.scrollTo({
        top: currentImageIndex * imageHeight,
        behavior: 'smooth'
    });

    // Automatically select the image that becomes visible after the scroll
    selectImage(containers[currentImageIndex]);
}

// Automatically select the first image (index 0) when the page loads
window.onload = function() {
    var firstImageContainer = document.querySelectorAll('.image-container')[0];
    if (firstImageContainer) {
        selectImage(firstImageContainer);
    }
};


</script>
